<% content_for(:adobe_data_layer) do %>
  adobeDataLayer.push({
    "event": "pageLoadDirectory",
    "page": {
      "pageName": "rad-homepage",
      "pageTitle": "<%= t('page_title') %>",
      "categoryL1": "Pensions & retirement",
      "categoryL2": "Taking your pension",
      "lang": "<%= I18n.locale %>",
      "site": "moneyhelper",
      "pageType": "tool page"
    },
    "tool": {
      "toolName": "Retirement Adviser Directory",
      "toolCategory": "",
      "toolStep": "1",
      "stepName": "Find a retirement adviser"
    }
  });
<% end %>
<div class="l-constrained">
  <div class="l-2col">
    <div class="l-2col-main">
      <%= heading_tag(level: 1, class: 'l-landing-page__title') do %>
        <%= t('page_title') %>
      <% end %>
    </div>
    <div class="l-2col-side l-landing-page__register-link">
      <%= link_to t('rad_signup_link'), rad_signup_url, target: "_blank" %>
    </div>
  </div>
</div>

<div class="l-landing-page__find-adviser">
  <div class="l-constrained">
    <section class="l-landing-page__2col search-filter l-landing-page__search-filter t-search-filter" data-further-info>
      <%= render 'landing_page/search_filter' %>
    </section>
    <section class="l-landing-page__2col">
      <%= heading_tag(t('trust_banner.heading'), level: 2, class: 'l-landing-page__trust-banner__header l-landing-page__section-header') %>

      <ul class="list-benefits banner-list">
        <% t('trust_banner.items').each do |item| %>
          <li data-further-info>
            <%= raw item[:text] %>
            <% if item[:tooltip] %>
              <%= render 'further_info_trigger' %>
              <p class="is-hidden further-info__content" data-further-info-target><%= item[:tooltip] %></p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </section>
  </div>
</div>

<div class="l-landing-page__why-adviser">
  <div class="l-constrained">
    <section class="l-landing-page__1col--alt-spacing">
      <%= heading_tag(t('find_retirement_adviser.subheading'), level: 2, class: 'l-landing-page__section-header l-landing-page--margin-collapse-bottom') %>
    </section>
    <section class="l-landing-page__2col">
      <div class="video-wrapper">
        <iframe width="560" height="315" src="<%= t('landing_page.show.video1_url')%>" frameborder="0" allowfullscreen title="<%= t('landing_page.show.video1_title')%>"></iframe>
      </div>
      <p class="video__description">
        <%= t('find_retirement_adviser.video.description') %>
        <a class="video__transcript-link" target="_blank" href="<%= t('find_retirement_adviser.video.download_transcript_link') %>"><%= t('find_retirement_adviser.video.download_transcript_text') %></a>
      </p>
    </section>
    <section class="l-landing-page__2col">
      <div class="advert">
        <%= heading_tag(t('pension_wise.heading'), level: 3, class: 'advert__header') %>
        <%= image_tag('pensionwise_logo.svg', class: 'advert__img', alt: '') %>
        <% t('pension_wise.description').each do |item| %>
          <p class="advert__intro"><%= raw item[:text] %></p>
        <% end %>
      </div>

      <section data-education-module>
        <%= heading_tag(level: 3, class: 'education__heading', data: { education_module_heading: '' }) do %>
          <span class="education__heading-text"><%= t('workplace_scheme.question') %></span>
        <% end %>
        <p class="is-hidden education__content" data-education-module-target><%= t('workplace_scheme.tooltip') %></p>
      </section>
    </section>
  </div>
</div>

<div class="l-landing-page__advice-reasons">
  <div class="l-constrained">
    <div class="l-landing-page__2col is-hidden-on-mobile">
      <%= heading_tag(t('more_reasons.heading'), level: 2, class: 'l-landing-page__section-header') %>

      <ul class="list-benefits">
        <% t('more_reasons.key_points').each do |item| %>
          <li><%= item[:text] %></li>
        <% end %>
      </ul>

      <p class="advice-reasons__explaination"><%= t('more_reasons.guides_html') %></p>
    </div>

    <div class="l-landing-page__2col">
      <%= heading_tag(t('more_reasons.heading'), level: 2, class: 'l-landing-page__section-header') %>

      <div class="video-wrapper">
        <iframe width="560" height="315" src="<%= t('landing_page.show.video2_url')%>" frameborder="0" allowfullscreen title="<%= t('landing_page.show.video2_title')%>"></iframe>
      </div>
      <p class="video__description">
        <%= t('more_reasons.video.description') %>
        <a class="video__transcript-link" target="_blank" href="<%= t('more_reasons.video.download_transcript_link') %>"><%= t('more_reasons.video.download_transcript_text') %></a>
      </p>
    </div>

    <div class="l-landing-page__2col is-hidden-on-non-mobile">
      <ol class="list-numbers">
        <% t('more_reasons.key_points').each do |item| %>
          <li><%= item[:text] %></li>
        <% end %>
      </ol>

      <p class="advice-reasons__explaination"><%= t('more_reasons.guides_html') %></p>
    </div>

  </div>
</div>

<div class="l-landing-page__other-information">
  <div class="l-constrained">
    <section class="l-landing-page__3col">
      <%= heading_tag(t('useful_links.heading'), level: 2, class: 'l-landing-page__heading') %>
      <ul class="unstyled-list">
        <% t('useful_links.links').each do |item| %>
          <li>
            <a href="<%= item[:url] %>" target="_blank"><%= item[:text] %></a>
          </li>
        <% end %>
      </ul>
    </section>

    <section class="l-landing-page__3col">
      <%= heading_tag(t('our_promise.heading'), level: 2, class: 'l-landing-page__heading') %>
      <ul class="list-benefits">
        <% t('our_promise.key_points').each do |item| %>
          <li><%= item[:text] %></li>
        <% end %>
      </ul>
    </section>

    <section class="l-landing-page__3col">
      <%= heading_tag(t('retirement_income_options.heading'), level: 2, class: 'l-landing-page__heading') %>
      <p><%= t('retirement_income_options.content') %></p>
      <a href="<%= t('retirement_income_options.link_url') %>" target="_blank"><%= t('retirement_income_options.link_text') %></a>
    </section>
  </div>
</div>
